<div class="grid-container fluid" id = "product-display">
   <div class="grid-x grid-margin-x">
        <div class="cell large-4 large-offset-4">   
            <div class="row">
                <div class="media-object">
                    <div class="media-object-section" id = "product-description">
                        <div >
                            {{#each this}}                                                                  
                                <p id = "picture-list"><img src={{picture}} width="300" height="200"></p>
                                <h4 id = "sku-id">SKU: {{sku}}</h4> 
                                <h5 id = "product-name-id">Product Name: {{product_name}}</h5>
                                <h5 id = "price-id">Price: $ {{price}}</h5>
                                <h5 id = "stock-id">Stock: {{stock}}</h5>
                                <h5 id = "category-list-id">Category: {{category_id}}</h5>                                         
                            {{/each}}
                        </div>
                    </div>
                </div> 
            </div>
        </div>   
    </div>
</div>                          
    